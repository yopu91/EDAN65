Program ::= Function;

abstract Function;
ParamFunc:Function ::=  Stmt*;
CallFunc:Function  ::= IdUse;

abstract Stmt;
WhileStmt:Stmt	::= Cond:Expr Stmt;
IfStmt:Stmt	::= Cond:Expr Then:Stmt [Else:Stmt]; 
ReturnStmt:Stmt	::= Expr;
Assignment:Stmt ::= IdUse Expr;
Declare:Stmt::= IdUse;

abstract Expr;
Numeral:Expr	::=<NUMERAL>;
IdUse:Expr	::=<ID>;
Add:Expr	::=Expr*;
Sub:Expr	::=Expr*;
Mul:Expr	::=Expr*;
Div:Expr	::=Expr*;
Mod:Expr	::=Expr*;
